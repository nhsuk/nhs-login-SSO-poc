@{
    ViewData["Title"] = "The NHS website immunisation status service";
}


<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-two-thirds">
        <h1>The NHS website immunisation status service</h1>
    </div>
</div>
<div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-two-thirds">
        <section>
            <div class="nhsuk-do-dont-list">
                <h3 class="nhsuk-do-dont-list__label">
                    You can use this service
                </h3>
                <ul class="nhsuk-list nhsuk-list--tick">
                    <li>
                        <svg class="nhsuk-icon nhsuk-icon__tick" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                            <path stroke-width="4" stroke-linecap="round" d="M18.4 7.8l-8.5 8.4L5.6 12"></path>
                        </svg>
                        <p>to check if you have had flu vaccination</p>
                    </li>
                    <li>
                        <svg class="nhsuk-icon nhsuk-icon__tick" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                            <path stroke-width="4" stroke-linecap="round" d="M18.4 7.8l-8.5 8.4L5.6 12"></path>
                        </svg>
                        <p>to check if you have had a coronavirus vaccination</p>
                    </li>
                    <li>
                        <svg class="nhsuk-icon nhsuk-icon__tick" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                            <path stroke-width="4" stroke-linecap="round" d="M18.4 7.8l-8.5 8.4L5.6 12"></path>
                        </svg>
                        <p>to check if you are eligible for a coronavirus vaccination</p>
                    </li>
                </ul>
            </div>

            <div class="nhsuk-do-dont-list">
                <h3 class="nhsuk-do-dont-list__label">
                    You cannot use this service
                </h3>
                <ul class="nhsuk-list nhsuk-list--cross">
                    <li>
                        <svg class="nhsuk-icon nhsuk-icon__cross" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true">
                            <path d="M17 18.5c-.4 0-.8-.1-1.1-.4l-10-10c-.6-.6-.6-1.6 0-2.1.6-.6 1.5-.6 2.1 0l10 10c.6.6.6 1.5 0 2.1-.3.3-.6.4-1 .4z"></path>
                            <path d="M7 18.5c-.4 0-.8-.1-1.1-.4-.6-.6-.6-1.5 0-2.1l10-10c.6-.6 1.5-.6 2.1 0 .6.6.6 1.5 0 2.1l-10 10c-.3.3-.6.4-1 .4z"></path>
                        </svg>
                        <p>if you are under the age of 13</p><p></p>
                    </li>
                    <li>
                        <svg class="nhsuk-icon nhsuk-icon__cross" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true">
                            <path d="M17 18.5c-.4 0-.8-.1-1.1-.4l-10-10c-.6-.6-.6-1.6 0-2.1.6-.6 1.5-.6 2.1 0l10 10c.6.6.6 1.5 0 2.1-.3.3-.6.4-1 .4z"></path>
                            <path d="M7 18.5c-.4 0-.8-.1-1.1-.4-.6-.6-.6-1.5 0-2.1l10-10c.6-.6 1.5-.6 2.1 0 .6.6.6 1.5 0 2.1l-10 10c-.3.3-.6.4-1 .4z"></path>
                        </svg>
                        <p>if your registered GP surgery is not in England</p>
                    </li>
                    <li>
                        <svg class="nhsuk-icon nhsuk-icon__cross" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true">
                            <path d="M17 18.5c-.4 0-.8-.1-1.1-.4l-10-10c-.6-.6-.6-1.6 0-2.1.6-.6 1.5-.6 2.1 0l10 10c.6.6.6 1.5 0 2.1-.3.3-.6.4-1 .4z"></path>
                            <path d="M7 18.5c-.4 0-.8-.1-1.1-.4-.6-.6-.6-1.5 0-2.1l10-10c.6-.6 1.5-.6 2.1 0 .6.6.6 1.5 0 2.1l-10 10c-.3.3-.6.4-1 .4z"></path>
                        </svg>
                        <p>to book a vaccination</p>
                    </li>
                </ul>
            </div>
        </section>
        <section>
            <a asp-action="ImmunisationStatus" role="button" draggable="false" class="nhsuk-button ">
                Continue With NHS Login
            </a>
        </section>
    </div>
</div>
